<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="DrawerListButtonStyle" parent="android:Theme.Light">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>

    
    
    <!-- this style prevents the app to show a title in the actionbar before the custom layout (abs_layout.xml) is set -->
    <style name="ActionBarWithoutTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarWithoutTitle.ActionBarStyle</item>
    </style>

    <style name="ActionBarWithoutTitle.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarWithoutTitle.ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBarWithoutTitle.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#00ffffff</item>
        
    </style>

    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme"> -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <!-- </style> -->
    <style name="AppTheme" parent="android:Theme.Light" />

</resources>
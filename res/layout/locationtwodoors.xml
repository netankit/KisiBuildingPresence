<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textViewTwoDoors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/locationtwodoors"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonTwoDoorTwo"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_alignLeft="@+id/buttonTwoDoorOne"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="76dp"
        android:background="@drawable/login_button"
        android:text="@string/doortwoopen"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonTwoDoorOne"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_above="@+id/buttonTwoDoorTwo"
        android:layout_alignLeft="@+id/textViewTwoDoors"
        android:layout_marginBottom="17dp"
        android:background="@drawable/login_button"
        android:text="@string/doorOne"
        android:textColor="#ffffff" />

</RelativeLayout>
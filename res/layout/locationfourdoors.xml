<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textViewFourDoors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/locationfourdoors"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" 
        android:layout_centerHorizontal="true" 
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonFourDoorOne"
                android:layout_width="120sp"
                android:layout_height="130sp"
                android:background="@drawable/dooronebutton"
                android:text="@string/doorOne"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/buttonFourDoorThree"
                android:layout_width="120sp"
                android:layout_height="130sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/doorthreebutton"
                android:text="@string/doorthreeopen"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonFourDoorTwo"
                android:layout_width="120sp"
                android:layout_height="130sp"
                android:background="@drawable/doortwobutton"
                android:text="@string/doortwoopen"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/buttonFourDoorFour"
                android:layout_width="120sp"
                android:layout_height="130sp"
                android:layout_marginTop="30dp"
                android:background="@drawable/doorfourbutton"
                android:text="@string/doorfouropen"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
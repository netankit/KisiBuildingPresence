<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/textViewThreeDoors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/locationthreedoors"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/buttonThreeDoorOne"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_below="@+id/textViewThreeDoors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/dooronebutton"
        android:text="@string/doorOne"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonThreeDoorTwo"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_below="@+id/buttonThreeDoorOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/doortwobutton"
        android:text="@string/doortwoopen"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/buttonThreeDoorThree"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:layout_below="@+id/buttonThreeDoorTwo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/doorthreebutton"
        android:text="@string/doorthreeopen"
        android:textColor="#ffffff" />

</RelativeLayout>